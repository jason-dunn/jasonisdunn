@code {
	bool boolLoggedIn, boolLoggedOut, boolRegister;
	string strUserName, strRegister;

	public bool pp_CollapseNavMenu { get; set; }
	public string pp_AssemblyVersion { get; set; }
	private string _CollapseNavMenu => pp_CollapseNavMenu ? "collapse" : null;
	private string _AssemblyVersion;

	protected override async Task OnInitializedAsync()
	{
		_AssemblyVersion = AssemblyVersionService.GetstrAssemblyVersion();
		//AppState.SetAssemblyVersionState(true);

		AppState.ppboolRegister = await localSession.GetItemAsync<bool>("Register");
		boolRegister = Convert.ToBoolean(AppState.ppboolRegister);
		
			if(boolRegister)
			{
				strRegister = "";
			}
			else
			{
				strRegister = "Please Register!";
			}
		boolLoggedIn = AppState.ppboolLoggedIn = await localSession.GetItemAsync<bool>("LoggedIn");
		strUserName = AppState.ppstrUserName = await localSession.GetItemAsync<string>("UserName");
		AppState.ppstrEmailAddress = await localSession.GetItemAsync<string>("EmailAddress");
		AppState.ppstrPassword = await localSession.GetItemAsync<string>("Password");
	}

	private void ToggleNavMenu(bool toggled)
	{
		pp_CollapseNavMenu = toggled;
		if (pp_CollapseNavMenu)
		{
			pp_CollapseNavMenu = !pp_CollapseNavMenu;
			pp_CollapseNavMenu = true;
		}
		else
		{
			pp_CollapseNavMenu = false;
		}
	}
	private void NavigateToEmail()
	{
		NavigationManager.NavigateTo("email");
	}
		private async Task  NavigateToLogout()
	{
		    await localSession.RemoveItemAsync("LoggedIn");
            //await localSession.RemoveItemAsync("UserName");
            //await localSession.RemoveItemAsync("EmailAddress");
            //await localSession.RemoveItemAsync("Password");
            //await localSession.RemoveItemAsync("Guid");
            //await localSession.RemoveItemAsync("Register");
			StateHasChanged();
			NavigationManager.NavigateTo("login");
	}
